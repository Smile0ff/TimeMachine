{{#each concerts}}

    <article class="item lift-item">
        <div class="photo-holder">
            <div class="photo">
                <figure>
                    <img src="{{ photo }}" alt="{{ photoTitle }}">
                </figure>
            </div>
        </div>
        <div class="stamp-holder">
            <span class="upper-title">{{ location }}</span>
            <p class="sub-title">{{ street }}</p>
        </div>
        <div class="info-holder">
            <time class="upper-title" datetime="{{ machineDate }}">{{ humanDate }}</time>
            <span class="underline"></span>
            <h2>{{ title }}</h2>
            <p>{{ description }}</p>
            {{#if link}}
                <a href="{{ link }}">{{ linkTitle }}<span class="arrow"></span></a>
            {{else}}
                <span class="no-link">{{ noLinkTitle }}</span>
            {{/if}}
            
        </div>
    </article>



{{/each}}